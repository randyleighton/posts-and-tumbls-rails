- render('layouts/errors', :object => @post)
.border-form-div
  = form_for (@post) do |f|
    = f.hidden_field :user_id, :value => current_user.id
    .form-group
      = f.label :title, class: "col-xs-3 control-label"
      = f.text_field :title, :autofocus => true, :placeholder => 'Title', class: "form-control"
    .form-group
      = f.label :body, class: "col-xs-3 control-label"
      = f.text_field :body, :placeholder => 'Body of your post', class: "form-control"
    .form-group
      = f.button :submit, class: "btn btn-primary"
